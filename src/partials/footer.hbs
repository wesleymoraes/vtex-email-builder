<table class="footer" width="100%" cellpadding="0" cellspacing="0" border="0">
  <tr>
    <td class="footer-content" align="center">
      <img src="{{brandLogo}}" alt="Logo {{brandName}}" class="logo" />
    </td>
  </tr>
  <tr>
    <td class="footer-content" align="center">
      <table class="footer-content" width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width: 600px;">
        <tr>
          <td align="center" width="50%">
            <a href="mailto:{{contactEmail}}" class="button">Contato</a>
          </td>
          <td align="center" width="50%">
            <a href="{{facebookUrl}}" class="social-icon" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/733/733547.png" alt="Facebook" width="24" />
            </a>
            <a href="{{instagramUrl}}" class="social-icon" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/2111/2111463.png" alt="Instagram" width="24" />
            </a>
            <a href="{{linkedinUrl}}" class="social-icon" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/174/174857.png" alt="LinkedIn" width="24" />
            </a>
            <a href="{{twitterUrl}}" class="social-icon" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/733/733579.png" alt="Twitter" width="24" />
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class="footer-copy" align="center">
      &copy; {{copyrightText}}
    </td>
  </tr>
</table>
