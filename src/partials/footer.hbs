<table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#f2f2f2"
  style="background-color: #f2f2f2; font-family: Arial, sans-serif; font-size: 14px; color: #555;">
  <tr>
    <td align="center" style="padding: 20px;">
      <img src="{{brandLogo}}" alt="Logo {{brandName}}" width="120" style="display: block;" />
    </td>
  </tr>
  <tr>
    <td align="center" style="padding: 10px 20px;">
      <table width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width: 600px;">
        <tr>
          <td align="center" width="50%" style="padding: 10px;">
            <a href="mailto:{{contactEmail}}"
              style="background-color: #005eff; color: #ffffff; text-decoration: none; padding: 12px 24px; border-radius: 4px; display: inline-block;">
              Contato
            </a>
          </td>
          <td align="center" width="50%" style="padding: 10px;">
            <a href="{{facebookUrl}}" style="margin: 0 5px;" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/733/733547.png" alt="Facebook" width="24"
                style="display: inline-block;" />
            </a>
            <a href="{{instagramUrl}}" style="margin: 0 5px;" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/2111/2111463.png" alt="Instagram" width="24"
                style="display: inline-block;" />
            </a>
            <a href="{{linkedinUrl}}" style="margin: 0 5px;" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/174/174857.png" alt="LinkedIn" width="24"
                style="display: inline-block;" />
            </a>
            <a href="{{twitterUrl}}" style="margin: 0 5px;" target="_blank" rel="noopener noreferrer">
              <img src="https://cdn-icons-png.flaticon.com/24/733/733579.png" alt="Twitter" width="24"
                style="display: inline-block;" />
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td align="center" style="padding: 20px; font-size: 12px; color: #777;">
      &copy; {{copyrightText}}
    </td>
  </tr>
</table>